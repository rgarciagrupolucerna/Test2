<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="poliza_xls_wizard" model="ir.ui.view">
        <field name="name">poliza XlS </field>
        <field name="model">poliza.xls</field>
        <field name="arch" type="xml">
       	 <form string="Poliza XLS">
       	<group>
       		<field name="todos"/>
       	</group>
       	<group attrs="{'invisible':[('todos','=',False)]}">
       		<field name="rango_de_empleados1"/>
       		<field name="rango_de_empleados2" string="To"/>
       		<field name="payslip_batch_id" invisible="1"/>
       	</group>
       	<footer>
                <button name="export_report_xlsx" string="Poliza XLS" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="btn btn-default" special="cancel" />
            </footer>
       	</form>
        </field>
    </record>
    
    <record id="poliza_xls_wizard_action" model="ir.actions.act_window">
        <field name="name">poliza XlS</field>
        <field name="res_model">poliza.xls</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="poliza_xls_wizard"/>
        <field name="target">new</field>
    </record>
    
</odoo>