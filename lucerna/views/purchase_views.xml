<?xml version="1.0"?>
<odoo>
    <record id="purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.lucerna.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header//button[@name='button_confirm'][2]" position="before">
                <button name="button_sent_to_approve" string="Set to Approve" type="object" class="oe_highlight" 
                        attrs="{'invisible':['|', ('requisition_id', '=', False), ('state', 'not in', ('draft', 'sent'))]}"/>
            </xpath>
        </field>
    </record>
</odoo>
